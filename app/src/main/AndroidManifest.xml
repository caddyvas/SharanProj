<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shashank.platform.classroomappui">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".ClassRoomUIMain"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainUI.Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mainUI.Announcements"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:label="Announcements" />
        <activity
            android:name=".mainUI.Lectures"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:label="Lectures" />
        <activity
            android:name=".mainUI.Events"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:label="Events" />
        <activity
            android:name=".mainUI.Courses"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:label="Courses" />
        <activity
            android:name=".mainUI.MyProfile"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:label="My Profile" />
        <activity
            android:name=".mainUI.Home"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mainUI.SignupScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".mainUI.Discussion"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:label="Discussion Forum" />
        <activity
            android:name=".mainUI.ProfileCreation"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".mainUI.LoginScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".mainUI.SplashScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>